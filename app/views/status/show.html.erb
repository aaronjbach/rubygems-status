<div id="full-status">
  <h1>RubyGems.org Status:
    <span class="color-<%= @status %>"><%= @status.upcase %></div>
  </h1>
</div>

<div id="container">
  <div id="pings">
    <table>
      <% @pings.each do |i| %>
        <tr>
          <td><b><%= i.service %></b>:</td>
          <td><span class="status-<%= i.status %>"><%= i.status %></span></td>
          <td><span class="time"><%= diff = Time.now - i.updated_at; (diff < 60) ? "#{diff.to_i}s" : time_ago_in_words(i.updated_at) %></span></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
